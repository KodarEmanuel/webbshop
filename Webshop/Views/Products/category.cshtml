@model Webshop.Models.ProdList

@{
    ViewBag.Title = "Hej";

}

<div class="product-container">  
   @for (int i = 0; i < Model.Getcount(); i++)
   {
    <div class="col">
        <div class="Prod_Img" style="background-image: @Model.ReturnImgPath(i))">
        </div>
        <div class="Prod_des">
            <p>
                @Model.ReturnDescription(i);
            </p>
        </div>

        <div class="Prod_form">
            @using (Html.BeginForm("AddToCart", "Products"))
            {
                    <label>Amount</label>
                    <input type="number" name="Amount" style="width:60px;"/>
                    <input type="submit" value="Add" style="width:50px;"/>
            }            
        </div>
    </div>

   }

</div>
    